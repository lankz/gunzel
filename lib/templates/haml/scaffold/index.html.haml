- set_meta_tags :title => <%= class_name %>.model_name.human.pluralize,
                :canonical => <%= index_helper %>_url

- content_for(:breadcrumbs) do
  %ol.breadcrumb
    %li= link_to('Home', root_path)
    %li.active= <%= class_name %>.model_name.human.pluralize

.container
  .page-header
    - if can?(:new, @<%= plural_table_name %>.new)
      = link_to(new_<%= singular_table_name %>_path, :class => 'btn btn-success pull-right') do
        %i.fa.fa-plus-circle
        = "New #{<%= class_name %>.model_name.human}"

    %h1= <%= class_name %>.model_name.human.pluralize

  %table.table.table-hover.table-striped
    %thead
      %tr
    <%- for attribute in attributes -%>
        %th= sort_link(@search, :<%= attribute.name %>, <%= class_name%>.human_attribute_name(:<%= attribute.name %>))
    <%- end -%>
        %th
        %th
        %th

    %tbody
      - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
        %tr
    <%- for attribute in attributes -%>
          %td= <%= singular_table_name %>.<%= attribute.name %>
    <%- end -%>
          %td
            = link_to('Show', <%= singular_table_name %>)
          %td
            - if can?(:edit, <%= singular_table_name %>)
              = link_to('Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>))
          %td
            - if can?(:destroy, <%= singular_table_name %>)
              = link_to('Destroy', <%= "#{singular_table_name}" %>,
                  :method => :delete,
                  :data => { :confirm => 'Are you sure?' })

  = paginate(@<%= plural_table_name %>)

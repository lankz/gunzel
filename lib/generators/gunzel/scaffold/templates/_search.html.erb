<%%= search_form_for(@search, :class => 'form-inline') do |f| %>
  <div class="input-group input-group-sm">
   <%%= f.input_field :<%= search_field %>,
                     :class => 'form-control',
                     :required => false,
                     :placeholder => 'Search' %>

    <div class="input-group-btn">
     <%%= button_tag :class => 'btn btn-default' do %>
       <i class="fa fa-search"></i>
     <%% end %>
    </div>
  </div>
<%% end %>

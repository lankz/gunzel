            <li>
              <%= link_to edit_registration_path(current_user) do %>
                <i class="fa fa-user"></i> <%= "Edit #{User.model_name.human}" %>
              <% end %>
            </li>

            <li class="divider"></li>

            <li>
              <%= link_to destroy_user_session_path, :method => :delete do %>
                <i class="fa fa-sign-out"></i> Sign out
              <% end %>
            </li>
          </ul>
